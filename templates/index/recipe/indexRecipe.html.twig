{% extends 'index/index.html.twig' %}

{% block title %}{% endblock %}

{% block banniere %}
    <div class="banniereRecipe"></div>
{% endblock %}

{% block titleCategory %}  
        <div class="titleCategory">Latest Recipes</div>
{% endblock %}

        {% block firstFunction %} 
            {% for article in firstRecipe %}
                <a class="col-lg-5" href="{{ path('viewRecipe', {'id': article.id}) }}">
                    {{ parent() }}
                </a>
            {% endfor %}
        {% endblock %}

        {% block listFunction %} 
            {% for article in listRecipe %}
                <a class="col-lg-3" href="{{ path('viewRecipe', {'id': article.id}) }}">
                    {{ parent() }}
                </a>
            {% endfor %}
        {% endblock %}
